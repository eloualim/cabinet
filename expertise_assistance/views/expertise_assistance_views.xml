<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- S√©quence pour Expertise Assistance -->
    <record id="seq_expertise_assistance" model="ir.sequence">
        <field name="name">Expertise Assistance Sequence</field>
        <field name="code">expertise.assistance</field>
        <field name="prefix">EA</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <!-- Vue Liste pour Expertise Assistance -->
    <record id="view_expertise_assistance_tree" model="ir.ui.view">
        <field name="name">expertise.assistance.tree</field>
        <field name="model">expertise.assistance</field>
        <field name="arch" type="xml">
            <list string="Dossiers Expertise Assistance">
                <field name="reference_dossier"/>
                <field name="numero_dossier"/>
                <field name="numero_dossier_mahakim"/>
                <field name="status" widget="badge" 
                       decoration-danger="status == 'incorrect'"
                       decoration-warning="status == 'incomplete'"
                       decoration-success="status == 'complete'"/>
                <field name="tribunal_id"/>
                <field name="magistrat"/>
                <field name="date_prochaine_audience"/>
                <field name="idjuridiction"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire pour Expertise Assistance -->
    <record id="view_expertise_assistance_form" model="ir.ui.view">
        <field name="name">expertise.assistance.form</field>
        <field name="model">expertise.assistance</field>
        <field name="arch" type="xml">
            <form string="Dossier Expertise Assistance">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_fetch_dossier_data" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-download"
                                string="R√©cup√©rer Donn√©es API"
                                invisible="not idjuridiction or not numero_dossier_mahakim"/>
                        <widget name="web_ribbon" title="Archiv√©" bg_color="bg-danger" invisible="active"/>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="reference_dossier" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Informations du Dossier">
                            <field name="numero_dossier"/>
                            <field name="numero_dossier_mahakim"/>
                            <field name="idjuridiction" readonly="1"/>
                            <field name="status" widget="selection"/>
                        </group>
                        <group string="Tribunaux et Acteurs">
                            <field name="ca_tribunal_id"/>
                            <field name="tribunal_id"/>
                            <field name="magistrat"/>
                            <field name="greffier"/>
                            <field name="date_prochaine_audience"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="R√©sum√©" name="resume">
                            <div class="alert alert-info" role="alert" invisible="resume">
                                <i class="fa fa-info-circle"/> 
                                <strong>Information:</strong> Cliquez sur le bouton "R√©cup√©rer Donn√©es API" pour charger les donn√©es du dossier depuis l'API Mahakim.
                            </div>
                            <div invisible="not resume" style="background-color: #ffffff; padding: 20px; border-radius: 8px; border: 2px solid #3498db; margin-top: 10px;">
                                <field name="resume" 
                                       widget="text"
                                       nolabel="1" 
                                       readonly="1"
                                       options="{'style': 'font-family: Consolas, Monaco, monospace; font-size: 13px; line-height: 1.8; color: #2c3e50; white-space: pre-wrap;'}"/>
                            </div>
                        </page>
                        <page string="Parties" name="parties">
                            <field name="parties_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="nom_prenom"/>
                                    <field name="role" 
                                           decoration-success="role == 'ŸÖÿØÿπŸä'"
                                           decoration-info="role == 'ŸÖÿØÿπŸâ ÿπŸÑŸäŸá'"/>
                                    <field name="type_personne" widget="badge" 
                                           decoration-info="type_personne == 'PP'"
                                           decoration-primary="type_personne == 'PM'"/>
                                    <field name="count_avocats"/>
                                    <field name="count_mandataires"/>
                                    <field name="count_huissiers"/>
                                    <field name="count_representants"/>
                                </list>
                                <form string="Partie">
                                    <group>
                                        <group string="Informations Principales">
                                            <field name="id_partie" readonly="1"/>
                                            <field name="nom_prenom"/>
                                            <field name="role"/>
                                            <field name="type_personne"/>
                                        </group>
                                        <group string="Compteurs">
                                            <field name="count_avocats"/>
                                            <field name="count_mandataires"/>
                                            <field name="count_huissiers"/>
                                            <field name="count_representants"/>
                                        </group>
                                    </group>
                                    <notebook>
                                        <page string="üìä Toutes les Donn√©es" name="all_data">
                                            <div class="alert alert-success" role="alert" style="margin-bottom: 15px;">
                                                <i class="fa fa-database"/> 
                                                <strong>Donn√©es Compl√®tes:</strong> Affichage de TOUTES les donn√©es JSON re√ßues de l'API, quel que soit le code du tribunal.
                                            </div>
                                            <div style="background-color: #f8f9fa; padding: 20px; border-radius: 8px; border: 1px solid #dee2e6;">
                                                <field name="raw_data_formatted" 
                                                       widget="text"
                                                       nolabel="1" 
                                                       readonly="1"
                                                       options="{'style': 'font-family: Consolas, Monaco, monospace; font-size: 12px; line-height: 1.6; color: #2c3e50; white-space: pre;'}"/>
                                            </div>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                        <page string="D√©cisions" name="decisions">
                            <field name="decisions_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="date_time_decision"/>
                                    <field name="type_decision" widget="badge" decoration-primary="True"/>
                                    <field name="contenu_decision"/>
                                    <field name="date_time_next_audience" 
                                           decoration-warning="date_time_next_audience"/>
                                    <field name="numero_jugement"/>
                                </list>
                                <form string="D√©cision">
                                    <group>
                                        <group string="Informations Principales">
                                            <field name="id_decision" readonly="1"/>
                                            <field name="date_time_decision"/>
                                            <field name="type_decision"/>
                                            <field name="numero_jugement"/>
                                        </group>
                                        <group string="Dates">
                                            <field name="date_time_next_audience"/>
                                            <field name="date_de"/>
                                            <field name="date_na"/>
                                        </group>
                                    </group>
                                    <group string="Contenu">
                                        <field name="contenu_decision" nolabel="1"/>
                                    </group>
                                    <notebook>
                                        <page string="üìä Toutes les Donn√©es" name="all_data">
                                            <div class="alert alert-success" role="alert" style="margin-bottom: 15px;">
                                                <i class="fa fa-database"/> 
                                                <strong>Donn√©es Compl√®tes:</strong> Affichage de TOUTES les donn√©es JSON re√ßues de l'API, quel que soit le code du tribunal.
                                            </div>
                                            <div style="background-color: #f8f9fa; padding: 20px; border-radius: 8px; border: 1px solid #dee2e6;">
                                                <field name="raw_data_formatted" 
                                                       widget="text"
                                                       nolabel="1" 
                                                       readonly="1"
                                                       options="{'style': 'font-family: Consolas, Monaco, monospace; font-size: 12px; line-height: 1.6; color: #2c3e50; white-space: pre;'}"/>
                                            </div>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                        <page string="Donn√©es API (JSON)" name="data">
                            <div class="oe_button_box" name="json_buttons" style="margin-bottom: 10px;">
                                <button name="action_fill_from_json" 
                                        type="object" 
                                        class="btn btn-primary" 
                                        string="üìù Remplir les champs depuis JSON"
                                        invisible="not data"
                                        help="Remplit automatiquement les champs du dossier √† partir des donn√©es JSON"/>
                            </div>
                            <div class="alert alert-info" role="alert" invisible="data_formatted">
                                <i class="fa fa-info-circle"/> 
                                <strong>Information:</strong> Cliquez sur le bouton "R√©cup√©rer Donn√©es API" pour charger les donn√©es du dossier depuis l'API Mahakim.
                            </div>
                            <div invisible="not data_formatted" style="background-color: #f8f9fa; padding: 20px; border-radius: 8px; border: 1px solid #dee2e6; margin-top: 10px;">
                                <field name="data_formatted" 
                                       widget="text"
                                       nolabel="1" 
                                       readonly="1"
                                       options="{'style': 'font-family: Consolas, Monaco, monospace; font-size: 13px; line-height: 1.6; color: #2c3e50; white-space: pre;'}"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vue Recherche pour Expertise Assistance -->
    <record id="view_expertise_assistance_search" model="ir.ui.view">
        <field name="name">expertise.assistance.search</field>
        <field name="model">expertise.assistance</field>
        <field name="arch" type="xml">
            <search string="Rechercher Dossiers">
                <field name="reference_dossier"/>
                <field name="numero_dossier"/>
                <field name="numero_dossier_mahakim"/>
                <field name="idjuridiction"/>
                <field name="tribunal_id"/>
                <field name="ca_tribunal_id"/>
                <field name="magistrat"/>
                <field name="greffier"/>
                <separator/>
                <filter string="Incorrect" name="incorrect" domain="[('status','=','incorrect')]"/>
                <filter string="Incomplet" name="incomplete" domain="[('status','=','incomplete')]"/>
                <filter string="Complet" name="complete" domain="[('status','=','complete')]"/>
                <separator/>
                <filter string="Archiv√©s" name="inactive" domain="[('active','=',False)]"/>
                <filter string="Audience √† venir" name="upcoming_audience" 
                        domain="[('date_prochaine_audience','!=',False)]"/>
                <group expand="0" string="Regrouper par">
                    <filter string="Statut" name="group_status" context="{'group_by':'status'}"/>
                    <filter string="Tribunal" name="group_tribunal" context="{'group_by':'tribunal_id'}"/>
                    <filter string="Tribunal CA" name="group_ca" context="{'group_by':'ca_tribunal_id'}"/>
                    <filter string="Magistrat" name="group_magistrat" context="{'group_by':'magistrat'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour Expertise Assistance -->
    <record id="action_expertise_assistance" model="ir.actions.act_window">
        <field name="name">Dossiers Expertise Assistance</field>
        <field name="res_model">expertise.assistance</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouveau dossier d'expertise assistance
            </p>
            <p>
                G√©rez vos dossiers d'expertise avec leurs r√©f√©rences et donn√©es associ√©es.
            </p>
        </field>
    </record>

    <!-- Menu pour Expertise Assistance -->
    <menuitem id="menu_expertise_assistance"
              name="Dossiers Expertise"
              parent="menu_gestion"
              action="action_expertise_assistance"
              sequence="10"/>

</odoo>
