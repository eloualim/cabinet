<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue formulaire propre pour les compagnies d'assurance -->
        <record id="view_insurance_company_form" model="ir.ui.view">
            <field name="name">insurance.company.form</field>
            <field name="model">insurance.company</field>
            <field name="arch" type="xml">
                <form string="Compagnie d'Assurance">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Nom de la compagnie"/>
                                <field name="arabic_name" placeholder="الاسم بالعربية"/>
                            </group>
                            <group>
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="email"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="contact_addresses" string="Contacts &amp; Adresses">
                                <group>
                                    <group string="Adresse">
                                        <field name="street" placeholder="Rue..."/>
                                        <field name="street2"/>
                                        <field name="zip" placeholder="Code postal"/>
                                        <field name="city" placeholder="Ville"/>
                                        <field name="state_id"/>
                                        <field name="country_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue liste propre pour les compagnies d'assurance -->
        <record id="view_insurance_company_list" model="ir.ui.view">
            <field name="name">insurance.company.list</field>
            <field name="model">insurance.company</field>
            <field name="arch" type="xml">
                <list string="Compagnies d'Assurance">
                    <field name="name"/>
                    <field name="arabic_name"/>
                    <field name="city"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="email"/>
                </list>
            </field>
        </record>

        <!-- Vue recherche propre pour les compagnies d'assurance -->
        <record id="view_insurance_company_search" model="ir.ui.view">
            <field name="name">insurance.company.search</field>
            <field name="model">insurance.company</field>
            <field name="arch" type="xml">
                <search string="Rechercher Compagnies d'Assurance">
                    <field name="name" string="Nom"/>
                    <field name="arabic_name" string="Nom Arabe"/>
                    <field name="city" string="Ville"/>
                    <field name="phone" string="Téléphone"/>
                    <separator/>

                    <group expand="0" string="Grouper par">
                        <filter string="Ville" name="group_city" domain="[]" context="{'group_by': 'city'}"/>
                        <filter string="Pays" name="group_country" domain="[]" context="{'group_by': 'country_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action pour les compagnies d'assurance -->
        <record id="action_insurance_company" model="ir.actions.act_window">
            <field name="name">Compagnies d'Assurance</field>
            <field name="res_model">insurance.company</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle compagnie d'assurance
                </p>
                <p>
                    Gérez vos compagnies d'assurance avec leurs informations :
                    nom français et nom arabe.
                </p>
            </field>
        </record>

        <!-- Élément de menu -->
        <menuitem id="menu_insurance_companies_root"
                  name="Compagnies d'Assurance"
                  sequence="20"/>
                  
        <menuitem id="menu_insurance_companies"
                  name="Compagnies d'Assurance"
                  parent="menu_insurance_companies_root"
                  action="action_insurance_company"
                  sequence="10"/>

    </data>
</odoo>